set(PACKAGE_VERSION @ALLOY_VERSION@)
set(PACKAGE_VERSION_MAJOR @ALLOY_VERSION_MAJOR@)
set(PACKAGE_VERSION_MINOR @ALLOY_VERSION_MINOR@)

# checks version: major must match, minor must be less than or equal
if (PACKAGE_FIND_VERSION_MAJOR STREQUAL PACKAGE_VERSION_MAJOR)
  if (PACKAGE_FIND_VERSION_MINOR STREQUAL PACKAGE_VERSION_MINOR)
    set(PACKAGE_VERSION_EXACT TRUE)
  elseif (PACKAGE_FIND_VERSION_MINOR LESS PACKAGE_VERSION_MINOR)
    set(PACKAGE_VERSION_COMPATIBLE TRUE)
  endif()
endif()

if (NOT PACKAGE_VERSION_EXACT AND
    NOT PACKAGE_VERSION_COMPATIBLE)
  set(PACKAGE_VERSION_UNSUITABLE TRUE)
endif()
